   <Button fx:id="addCustomerButton" layoutX="50.0" layoutY="395.0" mnemonicParsing="false" onAction="#actionAddCustomer" text="ADD" textFill="#16bb4d">
      <font>
         <Font size="19.0" />
      </font>
   </Button>
   <Button fx:id="cancelAddButton" layoutX="178.0" layoutY="395.0" mnemonicParsing="false" onAction="#actionCancelAddCustomer" text="CANCEL" textFill="#f02121">
      <font>
         <Font size="19.0" />
      </font>
   </Button>

</AnchorPane>
