   <Button layoutX="47.0" layoutY="392.0" mnemonicParsing="false" onAction="#actionUpdateCustomer" text="UPDATE" textFill="#42950f">
      <font>
         <Font size="17.0" />
      </font>
   </Button>
   <Button fx:id="cancelUpdateButton" layoutX="178.0" layoutY="392.0" mnemonicParsing="false" onAction="#actionCancelUpdateCustomer" text="CANCEL" textFill="#d82e10">
      <font>
         <Font size="17.0" />
      </font>
   </Button>

</AnchorPane>
